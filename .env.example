# Todoist OAuth App credentials (from developer.todoist.com/appconsole)
TODOIST_CLIENT_ID=your_client_id_here
TODOIST_CLIENT_SECRET=your_client_secret_here

# Todoist Personal API Token (from todoist.com/prefs/integrations)
TODOIST_API_TOKEN=your_api_token_here

# Capacities API Token (from Capacities settings)
CAPACITIES_API_TOKEN=your_capacities_token_here

# Capacities Space ID (from your Capacities workspace URL)
CAPACITIES_SPACE_ID=e03a27f0-4be6-4713-8c3e-5717788fc4a9

# Your deployed webhook URL (set after first deploy)
WEBHOOK_URL=https://your-app.vercel.app/api/webhook
